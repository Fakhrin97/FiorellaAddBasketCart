@model List<Product>

@foreach (var product in Model)
{
    <div class="col-sm-6 col-md-4 col-lg-2 mt-3">
        <div class="product-item product-item-small text-center" data-id="@product?.Category?.Name?.ToLower()">
            <div class="img">
                <a href="">
                    <img src="/img/@product?.ImageUrl" class="img-fluid" alt="">
                </a>
            </div>
            <div class="title mt-3">
                <h6>@product?.Category?.Name?.ToLower()</h6>
            </div>
            <div class="price">
                <span class="text-black-50 bg-danger">$@product?.Price</span>                
                <span class="text-black-50">$@(product?.Price*(100 - product?.DiscountDegree) / 100)</span>
            </div>
        </div>
    </div>
}